<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matthewsyren.seriessearcher">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.matthewsyren.seriessearcher.activities.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.matthewsyren.seriessearcher.activities.RandomShowsActivity"
            android:label="@string/title_activity_random_shows"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.matthewsyren.seriessearcher.activities.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.matthewsyren.seriessearcher.activities.SpecificShowActivity"
            android:label="@string/title_activity_specific_show"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.matthewsyren.seriessearcher.activities.CreateAccountActivity" />
        <activity android:name="com.matthewsyren.seriessearcher.activities.SearchByEpisodeActivity" />
        <activity android:name="com.matthewsyren.seriessearcher.activities.LoginActivity"/>
        <activity
            android:name="com.matthewsyren.seriessearcher.activities.HelpActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.matthewsyren.seriessearcher.activities.DisclaimerActivity"
            android:label="@string/title_activity_disclaimer"
            android:theme="@style/AppTheme.NoActionBar"/>

        <service android:name=".services.FirebaseService" />
    </application>
</manifest>