<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpecificShowText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/specific_show_activity_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SearchByEpisodeText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/search_by_episode_text_margin</item>
        <item name="android:textSize">@dimen/specific_show_activity_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="SpecificShowActivityCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_marginTop">@dimen/show_information_margin_top</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RoundedButtonStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:paddingStart">@dimen/button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/button_horizontal_padding</item>
    </style>

    <style name="ContainedButtonStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/contained_button</item>
    </style>

    <style name="TextButtonStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/text_button</item>
    </style>

    <style name="TextViewMessageStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="LoginTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="FirebaseUI.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FirebaseUI.Text.Link">
        <item name="android:textColor">@color/linkColor</item>
    </style>

    <style name="RecyclerViewLargeText">
        <item name="android:textColor">@color/recyclerViewLargeTextColor</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/list_row_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RecyclerViewSmallText">
        <item name="android:textColor">@color/recyclerViewSmallTextColor</item>
        <item name="android:textSize">@dimen/list_row_text_size</item>
        <item name="android:layout_marginTop">@dimen/list_row_text_margin_top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ShowPosterActivity" parent="Base.Theme.AppCompat.DialogWhenLarge">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="windowFixedHeightMajor">100%</item>
        <item name="windowFixedHeightMinor">100%</item>
    </style>

    <style name="ShowPosterTitle">
        <item name="android:textSize">@dimen/show_poster_title_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/show_poster_title_padding</item>
    </style>

    <style name="ShowPosterActivityInnerConstraintLayout">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/show_poster_activity_padding</item>
        <item name="android:background">@drawable/show_poster_activity_background</item>
    </style>

    <style name="ShowPosterActivityImageView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:contentDescription">@string/content_description_show_poster</item>
        <item name="android:transitionName">@string/transition_image</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ShowPosterActivityOuterConstraintLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:onClick">closeDialog</item>
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
    </style>
</resources>