<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.matthewsyren.seriessearcher.activities.SpecificShowActivity"
    tools:showIn="@layout/activity_specific_show">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_show_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/specific_show_activity_heading_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/text_show_premiered"
            android:layout_below="@+id/text_show_title"
            style="@style/SpecificShowText"/>

        <TextView
            android:id="@+id/text_show_genres"
            android:layout_below="@+id/text_show_premiered"
            style="@style/SpecificShowText"/>

        <TextView
            android:id="@+id/text_show_language"
            android:layout_below="@+id/text_show_genres"
            style="@style/SpecificShowText" />

        <TextView
            android:id="@+id/text_show_status"
            android:layout_below="@+id/text_show_language"
            style="@style/SpecificShowText"/>

        <TextView
            android:id="@+id/text_show_runtime"
            android:layout_below="@+id/text_show_status"
            style="@style/SpecificShowText" />

        <TextView
            android:id="@+id/text_show_rating"
            android:layout_below="@+id/text_show_runtime"
            style="@style/SpecificShowText"/>

        <TextView
            android:id="@+id/text_show_latest_episode"
            android:layout_below="@+id/text_show_rating"
            style="@style/SpecificShowText" />

        <TextView
            android:id="@+id/text_show_next_episode"
            android:layout_below="@+id/text_show_latest_episode"
            style="@style/SpecificShowText"/>

        <TextView
            android:id="@+id/text_show_summary"
            android:layout_below="@+id/text_show_next_episode"
            style="@style/SpecificShowText"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>