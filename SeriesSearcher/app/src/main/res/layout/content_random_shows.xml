<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_random_shows"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/list_activity_horizontal_margin"
    android:layout_marginEnd="@dimen/list_activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.matthewsyren.seriessearcher.activities.RandomShowsActivity"
    tools:showIn="@layout/app_bar_random_shows">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_random_shows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <include
        layout="@layout/no_internet_connection"/>
</RelativeLayout>