<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.matthewsyren.seriessearcher.activities.SearchByEpisodeActivity">
        <TextView
            android:id="@+id/text_show_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/specific_show_activity_heading_text_size"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_season"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_show_title">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_show_season"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_season"
                android:inputType="number"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:imeOptions="flagNoExtractUi"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_episode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_input_layout_season"
            android:layout_marginBottom="@dimen/activity_vertical_margin">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_show_episode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_episode"
                android:inputType="number"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:imeOptions="flagNoExtractUi"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_search"
            android:layout_below="@id/text_input_layout_episode"
            android:onClick="searchByEpisodeOnClick"
            android:layout_centerHorizontal="true"
            style="@style/ButtonStyle"/>

        <TextView
            android:id="@+id/text_no_internet_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_search"
            style="@style/TextViewMessageStyle"
            android:textAlignment="center"
            android:text="@string/error_no_internet_connection"
            android:visibility="gone"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <LinearLayout
            android:id="@+id/ll_search_by_episode_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_search"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/text_show_episode_name"
                style="@style/SearchByEpisodeText"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin">
                <include
                    android:id="@+id/guideline"
                    layout="@layout/centre_guideline"/>

                <TextView
                    android:id="@+id/text_show_season_number_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/SpecificShowActivityCaption"
                    android:text="@string/season_number"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="0dp"/>

                <TextView
                    android:id="@+id/text_show_season_number"
                    style="@style/SpecificShowText"
                    app:layout_constraintTop_toBottomOf="@id/text_show_season_number_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline"/>

                <TextView
                    android:id="@+id/text_show_episode_number_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/SpecificShowActivityCaption"
                    android:text="@string/episode_number"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="0dp"/>

                <TextView
                    android:id="@+id/text_show_episode_number"
                    style="@style/SpecificShowText"
                    app:layout_constraintTop_toBottomOf="@id/text_show_episode_number_title"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin">
                <include
                    android:id="@+id/guideline"
                    layout="@layout/centre_guideline"/>

                <TextView
                    android:id="@+id/text_show_air_date_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/SpecificShowActivityCaption"
                    android:text="@string/text_episode_air_date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="0dp"/>

                <TextView
                    android:id="@+id/text_show_air_date"
                    style="@style/SpecificShowText"
                    app:layout_constraintTop_toBottomOf="@id/text_show_air_date_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline"/>

                <TextView
                    android:id="@+id/text_show_runtime_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/SpecificShowActivityCaption"
                    android:text="@string/text_runtime_title"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="0dp"/>

                <TextView
                    android:id="@+id/text_show_runtime"
                    style="@style/SpecificShowText"
                    app:layout_constraintTop_toBottomOf="@id/text_show_runtime_title"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/text_show_summary"
                style="@style/SearchByEpisodeText" />

            <TextView
                android:id="@+id/text_show_status"
                style="@style/SearchByEpisodeText"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</ScrollView>