<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:onClick="closeDialog"
    android:layout_margin="@dimen/activity_horizontal_margin">
    <android.support.constraint.Guideline
        android:id="@+id/guideline_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/guideline_size"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_2"
        android:background="@drawable/show_poster_activity_background"
        android:padding="@dimen/show_poster_activity_padding">
        <TextView
            android:id="@+id/text_view_show_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ShowPosterTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/image_view_show_poster"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_max="@dimen/show_poster_height"
            app:layout_constrainedHeight="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:transitionName="@string/transition_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_show_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/content_description_show_poster"
            android:clickable="true"
            android:focusable="true"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/guideline_size"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>
</android.support.constraint.ConstraintLayout>